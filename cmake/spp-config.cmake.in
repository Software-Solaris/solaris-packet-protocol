@PACKAGE_INIT@

# SPP (Solaris Packet Protocol) Configuration File

include(CMakeFindDependencyMacro)

# Verificar que los componentes requeridos estén disponibles
set(SPP_COMPONENTS core services databank)

foreach(component ${SPP_FIND_COMPONENTS})
    if(NOT component IN_LIST SPP_COMPONENTS)
        set(SPP_FOUND FALSE)
        set(SPP_NOT_FOUND_MESSAGE "Unknown component: ${component}")
        return()
    endif()
endforeach()

# Incluir los targets exportados
include("${CMAKE_CURRENT_LIST_DIR}/spp-targets.cmake")

# Verificar que los targets existan
check_required_components(spp)

# Configurar variables de compatibilidad
set(SPP_LIBRARIES spp::spp)
set(SPP_INCLUDE_DIRS "${PACKAGE_PREFIX_DIR}/include")

# Información de la librería
set(SPP_VERSION "@PROJECT_VERSION@")
set(SPP_VERSION_MAJOR "@PROJECT_VERSION_MAJOR@")
set(SPP_VERSION_MINOR "@PROJECT_VERSION_MINOR@")
set(SPP_VERSION_PATCH "@PROJECT_VERSION_PATCH@")

message(STATUS "Found SPP: ${SPP_VERSION}") 